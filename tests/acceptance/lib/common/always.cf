#######################################################
#
# Test body always
#
#######################################################

body common control
{
      inputs => { '../../default.cf.sub' };
      bundlesequence  => { default("$(this.promise_filename)") };
      version => "1.0";
}

#######################################################

bundle agent init
{
}

#######################################################

bundle agent test
{
  reports:
      "" classes => always("ok_a");
}


#######################################################

bundle agent check
{
  classes:
      "ok" and => { "ok_a" };

  reports:
    DEBUG::

    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
