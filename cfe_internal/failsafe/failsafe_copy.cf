##################################################################
#
# cfe_internal_failsafe_copy
#  - ensure $(sys.inputsdir)/failsafe.cf exists
#  - this file is fallen back to if update.cf has syntax errors
#  - it is created during bootstrap, but we place it here to be sure
#
##################################################################

bundle agent cfe_internal_failsafe_copy
{
  files:
      "$(sys.inputdir)/failsafe.cf"
        copy_from => local_cp("$(sys.inputdir)/cfe_internal/failsafe/$(sys.cf_version_major).$(sys.cf_version_minor)/failsafe.cf"), 
        handle => "cfe_internal_failsafe_copy_local",
        comment => "Copy failsafe in-place based on versions available at policy server";
}
